@model PraiseProvisions.Models.UserProfile

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/StyleSheetNavbarOverride.css" />
<div class="row mainProf">
    <h4 class="center main-heading">Welcome</h4>
    <div class="col-md-4">
        <form method="post" asp-controller="UserProfiles" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fullName" class="control-label labelName"></label>
                <input asp-for="fullName" class="form-control profBar" placeholder="Enter Full Name" />
                <span asp-validation-for="fullName" class="text-danger"></span>
            </div>
            <div class="form-group center">
                <input type="submit" value="Sign In" class="btn btn-default widthBtn" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
